 @model List<User> 
 <div class="container">
     <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Users List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Users" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i>
                Add User
            </a>
        </div>
     </div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            ID
        </th>
        <th>
            User Name
        </th>
        <th>
            Display Password
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.Id)){
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Username</td>
                <td>@obj.Password</td>
                <td>
                    <div class"w-btn-group" role="group">
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                </td>

            </tr>
        }
    </tbody>
    </table>
</div>