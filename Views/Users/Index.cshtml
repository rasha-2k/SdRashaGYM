    }

    /* Table Header */
    .table thead tr {
    background-color: #ff4040; /* Blue header color */
    text-align: left;
    }

    .table thead th {
    padding: 10px 10px;
    color: #ffffff;
    font-weight: bold;
    }

    /* Table Body */
    .table tbody tr {
    background-color: #33373d;
    transition: background-color 0.2s ease-in-out;
    }

    .table tbody tr:hover {
    background-color: #3e444b;
    }

    .table tbody td {
    padding: 10px 10px;
    text-align: left;
    color: #FFFFFF;
    }

    /* ID Column */
    .table tbody tr td:first-child {
    font-weight: bold;
    }

</style>
