@model User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["ShowHeader"] = false;
}

<style>
    /* General styling */
    body {
        background-image: url('https://images.pexels.com/photos/669584/pexels-photo-669584.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
        background-size: cover;
        background-position: center;
        background-repeat: repeat-y;
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #1d1f26;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Center the form container */
    .form-container {
        background-color: #2b2f38;
        padding: 20px 40px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        width: 500px;
        height: 500px;
        text-align: center;
        margin: auto;
    }

    /* Logo container */
    .logo-container {
        margin-bottom: 150px;
        height: 50px
    }

    .logo {
        width: 200px;
        height: auto;
    }

    .form-title {
        font-size: 24px;
        margin-bottom: 20px;
        font-weight: bold;
        text-transform: uppercase;
        color: #f2f2f2;
    }

    /* Form styling */
    .form-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .input-group {
        display: flex;
        align-items: center;
        background-color: #404452;
        border-radius: 5px;
        padding: 10px;
    }

        .input-group label {
            color: #fff;
            margin-right: 10px;
        }

        .input-group input {
            flex: 1;
            border: none;
            background: none;
            color: #fff;
            outline: none;
        }

            .input-group input::placeholder {
                color: #b3b3b3;
            }

    /* Options styling */
    .options {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
    }

        .options a {
            color: #ff4040;
            text-decoration: none;
        }

        .options input {
            margin-right: 5px;
        }

    .btn-primary {
        color: #fff;
        border: none
    }

    /* Error message styling */
    .error-message {
        color: #ff4040;
        margin-top: 10px;
    }

</style>
<div class="form-container">
    <div class="logo-container">
        <img src="~/Assets/Images/1-removebg-preview.png" alt="Logo" class="logo">
    </div>
    <h2 class="form-title">Delete</h2>
    <form method="post" class="form-form">
        <input asp-for="Id" hidden/>
        <div class="input-group">
            <label for="name">
                <i class="fas fa-user"></i>
            </label>
            <input asp-for="FullName" type="text" placeholder="Full Name" disabled>

        </div>
        <div class="input-group">
            <label for="password">
                <i class="fas fa-lock"></i>
            </label>
            <input asp-for="PasswordHash" type="password" placeholder="Password" required>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger  w-100 p-2">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="Users" asp-action="Index" class="btn btn-primary form-control" style="text-decoration: none">Back to List</a>
            </div>
        </div>
    </form>
    @if (ViewBag.Error != null)
    {
        <p class="error-message">@ViewBag.Error</p>
    }
</div>


