<style>
    /* General styling */
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #1d1f26;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Center the signup container */
    .signup-container {
        background-color: #2b2f38;
        padding: 20px 40px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        width: 500px;
        height: 500px;
        text-align: center;
        margin: auto;
    }

    /* Logo container */
    .logo-container {
        margin-bottom: 150px;
        height: 50px
    }

    .logo {
        width: 200px;
        height: auto;
    }

    .signup-title {
        font-size: 24px;
        margin-bottom: 20px;
        font-weight: bold;
        text-transform: uppercase;
        color: #f2f2f2;
    }

    /* Form styling */
    .signup-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .input-group {
        display: flex;
        align-items: center;
        background-color: #404452;
        border-radius: 5px;
        padding: 10px;
    }

        .input-group label {
            color: #fff;
            margin-right: 10px;
        }

        .input-group input {
            flex: 1;
            border: none;
            background: none;
            color: #fff;
            outline: none;
        }

            .input-group input::placeholder {
                color: #b3b3b3;
            }

    /* Options styling */
    .options {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
    }

        .options a {
            color: #ff4040;
            text-decoration: none;
        }

        .options input {
            margin-right: 5px;
        }

    /* Button styling */
    .signup-button {
        background-color: #ff4040;
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .signup-button:hover {
            color: #fff;
            background-color: #e03535;
        }

    /* Error message styling */
    .error-message {
        color: #ff4040;
        margin-top: 10px;
    }

</style>
<div class="signup-container">
    <div class="logo-container">
        <img src="~/Assets/Images/1-removebg-preview.png" alt="Logo" class="logo">
    </div>
    <h2 class="signup-title">Edit</h2>
    <form method="post" class="signup-form">
        <input asp-for="Id" hidden/>
        <div class="input-group">
            <label for="username">
                <i class="fas fa-user"></i>
            </label>
            <input asp-for="Username" type="text" id="username" name="username" placeholder="Username" required>

        </div>
        <div class="input-group">
            <label for="password">
                <i class="fas fa-lock"></i>
            </label>
            <input asp-for="Password" type="password" id="password" name="password" placeholder="Password" required>
        </div>
        @*         <div class="options">
            <a asp-action="ForgotPassword" asp-controller="Login" class="forgot-password">Forgot password?</a>
        </div> *@
        <div class="row">
            <div class="col-6">
                <button type="submit" class="signup-button form-control">Update</button>

            </div>
            <div class="col-6">
                <a asp-controller="Users" asp-action="Index" class="signup-button form-control" style="text-decoration: none">Back to List</a>
            </div>
        </div>
    </form>
    @if (ViewBag.Error != null)
    {
        <p class="error-message">@ViewBag.Error</p>
    }
</div>


