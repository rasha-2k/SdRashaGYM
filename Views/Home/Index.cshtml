<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<!-- CSS -->
<style>
    * {
        scrollbar-color: #ff4040 #1d1f26;
        scroll-behavior: smooth;
    }
    /* Reset body styles */
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #fff; /* Backup color in case image fails */
    }

    /* Background Image Div */
    .background-image {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background-image: url('https://images.pexels.com/photos/669584/pexels-photo-669584.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        z-index: -1;
    }

    /* Main Container */
    .main-container {
        top:99px;
        position: relative;
        z-index: 1;
        padding: 20px;
        max-width: 1200px;
        margin: 20px auto;
        text-align: center;
        border-radius: 10px;
    }

    /* Header Styling */
    .header {
        margin-bottom: 40px;
    }

        .header h1 {
            font-size: 36px;
            color: #ff4040;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 18px;
            color: black;

        }

    /* Dashboard Styling */
    .dashboard {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        justify-content: center; /* Center horizontally */
        align-content: center; /* Center vertically */
    }

    .card {
        background-color: #2b2f38;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s, background-color 0.3s;
    }

        .card:hover {
            transform: translateY(-10px);
            background-color: #343a46;
        }

    .card-icon {
        font-size: 50px;
        color: #ff4040;
        margin-bottom: 15px;
    }

    .card h3 {
        font-size: 24px;
        color: #f2f2f2;
        margin-bottom: 10px;
    }

    .card p {
        font-size: 16px;
        color: #b3b3b3;
        margin-bottom: 20px;
    }


    .btn-primary {
        color: #fff;
        border: none
    }
</style>
<!-- Main Content -->
<div class="main-container">
    <div class="header">
        <h1>Welcome to SdRasha Gym!</h1>
        <p>Efficiently manage your gym's users and packages.</p>
    </div>

    <div class="dashboard">
        <div class="card">
            <i class="fas fa-users card-icon"></i>
            <h3>Manage Users</h3>
            <p>View, add, and manage gym users.</p>
            <div class="row">
                <div class="col-6">
                    <a asp-controller="Account" asp-action="Register" class="card-button btn  btn-danger w-100 p-2">Add User</a>
                </div>
                <div class="col-6">
                    <a asp-controller="Users" asp-action="Index" class="card-button btn btn-primary w-100 p-2">View Data</a>
                </div>
            </div>
        </div>

        <div class="card">
            <i class="fas fa-dumbbell card-icon"></i>
            <h3>Manage Packages</h3>
            <p>Customize membership packages for users.</p>
            <div class="row">
                <div class="col-6">
                    <a asp-controller="Home" asp-action="AddPackage" class="card-button btn btn-danger w-100 p-2">Add Package</a>
                </div>
                <div class="col-6">
                    <a asp-controller="Home" asp-action="PackageList" class="card-button btn btn-primary w-100 p-2">View Data</a>
                </div>
            </div>
        </div>
    </div>
</div>

