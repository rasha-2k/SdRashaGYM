@model Package
@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<style>
    /* General styling */
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #1d1f26;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    /* Center the form container */
    .form-container {
        background-color: #2b2f38;
        padding: 20px 40px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        width: 500px;
        height: 450px;
        text-align: center;
        margin: auto;
        align-content:center;
    }

    /* Logo container */
    .logo-container {
        margin-bottom: 75px;
        height: 50px
    }

    .logo {
        width: 200px;
        height: auto;
    }

    .form-title {
        font-size: 24px;
        margin-bottom: 20px;
        font-weight: bold;
        text-transform: uppercase;
        color: #f2f2f2;
    }

    /* Form styling */
    .form-form {
        display: flex;
        flex-direction: column;
        gap: 15px;
        justify-items:center;
        align-content: center;
    }

    .input-group {
        display: flex;
        align-items: center;
        background-color: #404452;
        border-radius: 5px;
        padding: 10px;
    }

        .input-group label {
            color: #fff;
            margin-right: 10px;
        }

        .input-group input {
            flex: 1;
            border: none;
            background: none;
            color: #fff;
            outline: none;
        }

            .input-group input::placeholder {
                color: #b3b3b3;
            }

    /* Options styling */
    .options {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
    }

        .options a {
            color: #ff4040;
            text-decoration: none;
        }

        .options input {
            margin-right: 5px;
        }

    .btn-primary {
        color: #fff;
        border: none
    }

    input, textarea, select {
        background-color: transparent;
        border: none;
        color: #fff;
    }

        select:focus-visible {
            outline: none;
        }

        input::placeholder,
        textarea::placeholder, select::placeholder {
            opacity: 1;
        }
    /* Error message styling */
    .error-message {
        color: #ff4040;
        margin-top: 10px;
    }

</style>
<div class="form-container">
    <div class="logo-container">
        <img src="~/Assets/Images/1-removebg-preview.png" alt="Logo" class="logo">
    </div>
    <h2 class="form-title">Delete</h2>
    <form method="post" class="form-form">
        <input asp-for="Id" hidden/>
        <div class="input-group">
            <label for="name">
                <i class="fas fa-user"></i>
            </label>
            <input asp-for="PackageName" type="text" disabled>

        </div>
        <input type="submit" value="Delete" class="btn btn-danger w-100 p-2" />
        <a asp-controller="Home" asp-action="PackageList" class="btn btn-primary">Cancel</a>
    </form>
    @if (ViewBag.Error != null)
    {
        <p class="error-message">@ViewBag.Error</p>
    }
</div>


